<% if @suit.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>
<ul>
    <% @suit.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @suit do |f| %>
   <p> 
       <%= f.label :appid %><br/>
       <%= f.text_field :appid %>
   </p>
   <p> 
       <%= f.label :gender %><br/>
       <%= f.text_field :gender %>
   </p>
   <p> 
       <%= f.label :size %><br/>
       <%= f.text_field :size %>
   </p>
   <p>
       <%= f.label :description %><br/>
       <%= f.text_area :description%>
   </p>
   <p>
       <%= f.label :user_id %><br/>
       <%= f.number_field :user_id%>
   </p>
     <p>
   <p>
       <%= f.submit %>
   </p>
<% end %>